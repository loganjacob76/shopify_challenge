<!DOCTYPE html>
<html>
  <head>
    <title>ShopifyChallenge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div id=<%= type %>>
        <%= msg %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
